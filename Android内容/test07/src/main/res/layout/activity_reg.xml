<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="注册页面"
        android:textSize="30sp"
        android:gravity="center"/>

    <EditText
        android:id="@+id/reg_edit_uid"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:hint="请输入注册账号"/>

    <EditText
        android:id="@+id/reg_edit_upassword"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:hint="请输入账号密码"/>

    <EditText
        android:id="@+id/reg_edit_uname"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:hint="请输入用户姓名"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/reg_tv_uimg"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="显示选择的图片路径"/>

        <Button
            android:id="@+id/reg_btn_uimg"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="选择图片"/>

    </LinearLayout>

    <Button
        android:id="@+id/reg_btn_reg"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="注册"/>

    <Button
        android:id="@+id/reg_btn_cancel"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="取消"/>

</LinearLayout>